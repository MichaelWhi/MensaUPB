<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="de.najidev.mensaupb" android:versionCode="60" android:versionName="1.0.1-SNAPSHOT">
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15"/>

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application android:icon="@drawable/icon"
    			 android:label="@string/app_name"
    			 android:theme="@style/Theme.Sherlock">
        <activity android:name=".activities.MainActivity"
        		  android:label="@string/app_name"
		          android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".activities.SettingsActivity" android:theme="@style/Theme.Sherlock">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        
        <activity android:name=".dialog.OpeningTimeDialog" android:theme="@style/Theme.Sherlock.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        
        <activity android:name=".dialog.ChooseOnListDialog" android:theme="@style/Theme.Sherlock.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        
    </application>
</manifest>
